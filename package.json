{
  "name": "hirehack-extension",
  "version": "1.0.0",
  "description": "Automate LinkedIn EasyApply job applications with smart filtering and tracking",
  "private": true,
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development --watch",
    "clean": "rimraf dist",
    "package": "npm run build && cd dist && zip -r ../hirehack-extension.zip .",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write src/**/*.{js,html,css}",
    "format:check": "prettier --check src/**/*.{js,html,css}"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-loader": "^9.1.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.42.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.7.0",
    "prettier": "^2.8.0",
    "rimraf": "^5.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "author": "HireHack Team",
  "license": "MIT",
  "keywords": [
    "chrome-extension",
    "linkedin",
    "job-application",
    "automation",
    "career"
  ],
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
